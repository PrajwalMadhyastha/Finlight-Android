<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include the encrypted database file -->
    <include domain="database" path="finance_database.db" />

    <!-- Include the compressed JSON snapshot file from the app's root files directory -->
    <include domain="file" path="backup_snapshot.gz" />

    <!-- Exclude the directory where all image attachments are stored to save space -->
    <exclude domain="file" path="attachments/" />

</full-backup-content>
