<?xml version="1.0" encoding="utf-8"?>
<!--
// =================================================================================
// FILE: ./app/src/main/res/xml/data_extraction_rules.xml
// REASON: FIX (Backup Restore) - The backup strategy has been fundamentally changed
// to be more robust. We no longer back up the live, encrypted database file,
// as the decryption key from the Android Keystore is lost on uninstall, making
// the file unrestorable. Instead, we now rely exclusively on the compressed JSON
// snapshot file ('backup_snapshot.gz') which is stored in the 'files' domain.
// The secure preferences file containing the old encrypted key is also excluded
// to prevent decryption errors on restore.
// =================================================================================
-->
<data-extraction-rules>
    <cloud-backup>
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="finlight_secure_prefs.xml" />

        <include domain="file" path="." />
        <exclude domain="file" path="attachments/" />
    </cloud-backup>

    <device-transfer>
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="finlight_secure_prefs.xml" />
        <include domain="database" path="." />
        <include domain="file" path="." />
        <exclude domain="file" path="attachments/" />
    </device-transfer>
</data-extraction-rules>